{
    "manifest_version"   :          3  ,
    "name"               : "RTabs (v3)",
    "short_name"         : "RTabs",
    "description"        : "Find In Page (v3)",
    "author"             : "Ivan Wellesz",
    "homepage_url"       : "https://remotetabs.com",
    "version"            : "1.23.08.30",
    "permissions"        : [
        "activeTab",


        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "declarativeNetRequestWithHostAccess",


        "scripting",
        "storage",
        "tabs",
        "webNavigation",
        "webRequest"


    ],
    "host_permissions"   : [
        "<all_urls>"
    ],
    "declarative_net_request": {
        "rule_resources"      : [
            {
                "id"               : "rules1_SET",
                "path"             : "rules1_SET.json",
                "enabled"          :  true
            },
            {
                "id"               : "rules2_REMOVE",
                "path"             : "rules2_REMOVE.json",
                "enabled"          :  false
            }
        ]
    },
    "icons"              : {
        "16"              : "images/rtabs16.png",
        "24"              : "images/rtabs24.png",
        "32"              : "images/rtabs32.png",
        "48"              : "images/rtabs48.png",
        "72"              : "images/rtabs72.png",
        "96"              : "images/rtabs96.png",
        "144"             : "images/rtabs144.png",
        "512"             : "images/rtabs512.png"
    },
    "background"         : {
        "service_worker"  : "javascript/worker.js"

    },
    "action"             : {
        "default_title"   : "RTabs",
        "default_popup"   : "popup.html",
        "default_icon"    : {
            "16"            : "images/rtabs16.png",
            "24"            : "images/rtabs24.png",
            "32"            : "images/rtabs32.png",
            "48"            : "images/rtabs48.png",
            "72"            : "images/rtabs72.png",
            "96"            : "images/rtabs96.png",
            "144"           : "images/rtabs144.png",
            "512"           : "images/rtabs512.png"
        }
    },
    "options_ui"         : {
        "page"            : "options.html"

    },
    "content_scripts"    : [ {
        "matches"         : [ "<all_urls>"         ],
        "js"              : [ "javascript/dom_load.js"

            ,                 "script/dom_data.js"
            ,                 "script/dom_log.js"
            ,                 "script/dom_popup.js"
            ,                 "script/dom_util.js"
            ,                 "script/dom_i18n.js"
            ,                 "script/dom_prop.js"

            ,                 "script/dom_store.js"
            ,                 "script/dom_fly.js"
            ,                 "script/dom_wording.js"
            ,                 "script/dom_select.js"
            ,                 "script/dom_slot.js"

            ,                 "script/dom_hide.js"
            ,                 "script/dom_view.js"
            ,                 "script/dom_sticky.js"
            ,                 "script/dom_seek.js"
            ,                 "script/dom_share.js"

            ,                 "script/dom_details.js"
            ,                 "script/dom_wot.js"
            ,                 "script/dom_sentence.js"
            ,                 "script/dom_grid.js"
            ,                 "script/dom_gutter.js"

            ,                 "script/dom_ipc.js"
            ,                 "script/dom_tools.js"

        ],
        "run_at"          :   "document_idle"
    } ],
    "content_security_policy": {
        "extension_pages"     :                        "script-src 'self';",
        "sandbox"             : "sandbox allow-scripts; script-src 'self';"
    }
}
